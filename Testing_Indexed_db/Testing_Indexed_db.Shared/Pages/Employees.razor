@page "/employees"
@using Testing_Indexed_db.Shared.Models
@using Testing_Indexed_db.Shared.Services
@inject IEmployeeService EmployeeService
@inject IOfflineService OfflineService
@inject ISyncService SyncService
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>Employees</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Employee Management</h1>
        <div class="d-flex align-items-center gap-2">
            @if (isOnline)
            {
                <span class="badge bg-success">
                    <span class="bi bi-wifi"></span> Online
                </span>
            }
            else
            {
                <span class="badge bg-warning text-dark">
                    <span class="bi bi-wifi-off"></span> Offline
                </span>
            }
            <span class="badge bg-info text-dark">
                <span class="bi bi-database"></span> IndexedDB
            </span>
        </div>
    </div>
    
    @if (!isOnline)
    {
        <div class="alert alert-info mb-3">
            <strong><span class="bi bi-info-circle"></span> Offline Mode:</strong> 
            You are currently offline. All data is stored locally in IndexedDB and will be available even without internet connection.
        </div>
    }

    @if (!isInitialized)
    {
        <div class="alert alert-info">Initializing database...</div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-12 col-md-4 mb-2">
                <button class="btn btn-primary w-100" @onclick="ShowAddForm">
                    <span class="bi bi-plus-circle"></span> Add New Employee
                </button>
            </div>
            <div class="col-12 col-md-4 mb-2">
                <button class="btn btn-success w-100" @onclick="SyncData" disabled="@(SyncService.IsSyncing || !isOnline)">
                    @if (SyncService.IsSyncing)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>Syncing...</span>
                    }
                    else
                    {
                        <span class="bi bi-arrow-repeat"></span>
                        <span>Sync Data</span>
                    }
                </button>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(syncStatusMessage))
        {
            <div class="alert alert-@(syncStatusMessage.Contains("success") ? "success" : "info") mb-3">
                @syncStatusMessage
            </div>
        }
        
        @if (pendingSyncActions.Count > 0)
        {
            <div class="alert alert-warning mb-3">
                <strong>Pending Sync Actions:</strong> @pendingSyncActions.Count change(s) waiting to sync
            </div>
        }

        @if (showForm)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5>@(currentEmployee.Id > 0 ? "Edit Employee" : "Add Employee")</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="currentEmployee" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <InputText class="form-control" @bind-Value="currentEmployee.Name" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText type="email" class="form-control" @bind-Value="currentEmployee.Email" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Department</label>
                            <InputText class="form-control" @bind-Value="currentEmployee.Department" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Position</label>
                            <InputText class="form-control" @bind-Value="currentEmployee.Position" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hire Date</label>
                            <InputDate class="form-control" @bind-Value="currentEmployee.HireDate" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">Save</button>
                            <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        }

        @if (employees.Count == 0)
        {
            <div class="alert alert-info">No employees found. Click "Add New Employee" to create one.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Position</th>
                            <th>Hire Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in employees)
                        {
                            <tr>
                                <td>@employee.Id</td>
                                <td>@employee.Name</td>
                                <td>@employee.Email</td>
                                <td>@employee.Department</td>
                                <td>@employee.Position</td>
                                <td>@employee.HireDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-2" @onclick="() => EditEmployee(employee)">
                                        <span class="bi bi-pencil"></span> Edit
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteEmployee(employee)">
                                        <span class="bi bi-trash"></span> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>

@code {
    private List<Employee> employees = new();
    private Employee currentEmployee = new();
    private bool showForm = false;
    private bool isInitialized = false;
    private bool isOnline = true;
    private string syncStatusMessage = string.Empty;
    private List<string> pendingSyncActions = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Check online status
            isOnline = await OfflineService.IsOnlineAsync();
            
            // Initialize offline detection
            OfflineService.OnlineStatusChanged += OnOnlineStatusChanged;
            await OfflineService.InitializeOfflineDetectionAsync();
            
            // Initialize IndexedDB - WORKS OFFLINE
            await EmployeeService.InitializeAsync();
            isInitialized = true;
            
            // Subscribe to sync status changes
            SyncService.SyncStatusChanged += OnSyncStatusChanged;
            
            await LoadEmployees();
            await LoadPendingSyncActions();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing: {ex.Message}");
            // Even if initialization fails, try to load existing data
            await LoadEmployees();
        }
    }
    
    private void OnOnlineStatusChanged(object? sender, bool online)
    {
        isOnline = online;
        StateHasChanged();
    }
    
    private void OnSyncStatusChanged(object? sender, string message)
    {
        syncStatusMessage = message;
        StateHasChanged();
        
        if (message.Contains("completed"))
        {
            Task.Run(async () =>
            {
                await Task.Delay(3000);
                syncStatusMessage = string.Empty;
                await LoadEmployees();
                await LoadPendingSyncActions();
                StateHasChanged();
            });
        }
    }
    
    private async Task LoadPendingSyncActions()
    {
        try
        {
            pendingSyncActions = await SyncService.GetPendingSyncActionsAsync();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading pending sync actions: {ex.Message}");
        }
    }
    
    private async Task SyncData()
    {
        syncStatusMessage = "Starting sync...";
        await LoadPendingSyncActions();
        
        var success = await SyncService.SyncAsync();
        
        if (success)
        {
            await LoadEmployees();
            await LoadPendingSyncActions();
        }
    }

    private async Task LoadEmployees()
    {
        try
        {
            employees = await EmployeeService.GetAllEmployeesAsync();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading employees: {ex.Message}");
        }
    }

    private void ShowAddForm()
    {
        // Ensure id is 0 for new employees
        currentEmployee = new Employee 
        { 
            Id = 0,  // Explicitly set to 0 for new employees
            HireDate = DateTime.Now 
        };
        showForm = true;
    }

    private void EditEmployee(Employee employee)
    {
        currentEmployee = new Employee
        {
            Id = employee.Id,
            Name = employee.Name,
            Email = employee.Email,
            Department = employee.Department,
            Position = employee.Position,
            HireDate = employee.HireDate
        };
        showForm = true;
    }

    private async Task HandleSubmit()
    {
        try
        {
            Employee? savedEmployee = null;
            
            if (currentEmployee.Id > 0)
            {
                savedEmployee = await EmployeeService.UpdateEmployeeAsync(currentEmployee);
            }
            else
            {
                savedEmployee = await EmployeeService.AddEmployeeAsync(currentEmployee);
            }

            if (savedEmployee != null)
            {
                showForm = false;
                syncStatusMessage = "Employee saved successfully to local database!";
                await LoadEmployees();
                
                // Clear message after 3 seconds
                await Task.Delay(3000);
                syncStatusMessage = string.Empty;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            syncStatusMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Error saving employee: {ex.Message}");
            StateHasChanged();
        }
    }

    private void CancelForm()
    {
        showForm = false;
        currentEmployee = new Employee();
    }

    private async Task DeleteEmployee(Employee employee)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete {employee.Name}?"))
        {
            try
            {
                var success = await EmployeeService.DeleteEmployeeAsync(employee.Id);
                if (success)
                {
                    await LoadEmployees();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting employee: {ex.Message}");
            }
        }
    }

    public async ValueTask DisposeAsync()
    {
        OfflineService.OnlineStatusChanged -= OnOnlineStatusChanged;
        SyncService.SyncStatusChanged -= OnSyncStatusChanged;
        
        if (OfflineService is IAsyncDisposable disposable)
        {
            await disposable.DisposeAsync();
        }
    }
}

